{
  "name": "{{name}}",
  "version": "{{version}}",
  {{#if private}}
  "private" : true,
  {{/if}}
  "output": "./build",
  "scripts": {
    "lint": "run-s lint:*",
    "lint:js": "eslint \"{__tests__,test,src,pages/src,pages/lib}/**/*.js\"",
    "flow": "flow",
    "type-check": "flow check",
    "compile": "run-s clean compile:*",
    {{#if lib}}
    "build": "run-s type-check compile test",
    "compile:lib": "babel src/lib -d lib",
    "watch:build": "gulp watch",
    "dev": "run-s build watch:build",
    {{#if private}}
    {{else}}
        "prepublish": "npm run build",
    {{/if}}
    {{/if}}

    {{#if bin}}
    "compile:bin": "babel src/bin -d bin",
    {{/if}}
    {{#if browserify}}
    "watch:bundle": "watchify src/main.js -o build/common-bundle.js --debug ",
    "serve": "echo 'http-server -o -s -c 1 -a localhost'",
    "dev": "npm-run-all --parallel watch:bundle serve",
    "bundle": "cross-env NODE_ENV=production browserify -g envify src/main.js | uglifyjs -c warnings=false -m > build/common-bundle.js",
    {{/if}}
    {{#if webpack2}}
    "dev": "npm run bundle:debug && cross-env NODE_ENV=development webpack-dev-server --config ./webpack.config.js  --open",
    "dll": "cross-env NODE_ENV=production webpack --config ./webpack.dll.config.js  --progress --colors",
    "bundle:release": "cross-env NODE_ENV=production webpack --config ./webpack.config.js  --progress --hide-modules",
    "bundle:debug": "webpack --config ./webpack.config.js  --progress --hide-modules",
    {{/if}}
    {{#if private}}
    {{else}}
        "predeploy": "npm run build",
        "deploy": "(test 1 -eq 1 || cd ./pages/out && git init && git config user.name \"Travis CI\" && git config user.email \"github@fb.com\" && git add . && git commit -m \"Deploy to GitHub Pages\" && git push --force --quiet \"https://${GH_TOKEN}@github.com/facebook/immutable-js.git\" master:gh-pages > /dev/null 2>1)",
    {{/if}}

    "test": "mocha",
    "test:travis": "npm run test && ./resources/check-changes.sh",
    "clean": "run-s clean:*",
    "clean:bin": "rimraf bin",
    "clean:lib": "rimraf lib",
    "clean:build": "rimraf build",
    "clean:dist": "rimraf dist"
  },
  {{#if browserify}}
  "browserify-shim": {
    {{#if director}}
    "router": "global:Router",
    {{/if}}
    "jquery": "global:jQuery"
  },
  "aliasify": {
    "aliases": {
        {{#if vue}}
      "vue": "./node_modules/vue/dist/vue.common.js"
        {{/if}}
    },
    "verbose": false
  },
  "browserify": {
    "debug": true,
    "entries": [
      "./src/main.js"
    ],
    "transform": [
      "babelify",
    {{#if vue}}
      "vueify",
    {{/if}}
    {{#if react}}
      "reactify",
    {{/if}}
      "aliasify",
      "brfs",
      "browserify-shim"
    ],
    "extensions": [".js", ".jsx", ".css"]
  },
  {{/if}}
  "dependencies": {
    {{#if page}}
    "page": "latest",
    {{/if}}
    {{#if react}}
    "react": "latest",
    "react-dom": "latest",
    {{/if}}
    {{#if vue}}
    "vue": "latest",
    "vue-router": "latest",
    {{/if}}
    "debug": "latest",
    "q": "latest",
    "handlebars": "latest"
  },
  "devDependencies": {
    "npm-run-all": "latest",
    {{#if browserify}}
    "envify": "latest",
    "aliasify": "latest",
    "babelify": "latest",
    "brfs": "latest",
    "browserify": "latest",
    "browserify-shim": "latest",
    {{#if react}}
    "reactify": "latest",
    {{/if}}
    {{#if vue}}
    "vueify": "latest",
    {{/if}}
    {{/if}}
{{#if babel}}
    "gulp": "latest",
    "gulp-babel": "latest",
    "gulp-watch": "latest",
    "gulp-sourcemaps": "latest",
    "vinyl-buffer": "latest",
    "vinyl-source-stream": "latest",
{{/if}}
    {{#if webpack2}}
    "webpack": "^2.x",
    "webpack-dev-server": "^2.x",
    "vue-loader": "latest",
    "transform-loader": "latest",
    "handlebars-loader": "latest",
    "html-webpack-plugin": "latest",
    "css-loader": "latest",
    "assets-webpack-plugin": "latest",
    "babel-loader": "latest",
    "string-replace-loader": "latest",
    "style-loader": "latest",
    "extract-text-webpack-plugin": "latest",
    "postcss-loader": "latest",
    {{/if}}
    {{#if postcss}}
    "precss": "latest",
    "postcss-import": "latest",
    "postcss-cssnext": "latest",
    {{/if}}
    "eslint": "latest",
    "eslint-config-atomer": "latest",
    "eslint-plugin-flowtype": "latest",
    "eslint-plugin-react": "latest",

    "karma": "latest",
    "karma-browserify": "latest",
    "karma-chrome-launcher": "latest",
    "karma-firefox-launcher": "latest",
    "karma-mocha": "latest",
    "karma-mocha-reporter": "latest",
    "mocha": "latest",
    "chai": "latest",


    "vue-template-compiler": "latest",

    "flow-bin": "latest",
    "rimraf": "latest",

    "cross-env": "latest",
    "watchify": "latest",
    "babel-cli": "latest",
    "babel-core": "latest",
    "babel-eslint": "latest",
    "babel-plugin-add-module-exports": "latest",
    "babel-plugin-transform-runtime": "latest",
    "babel-preset-es2015": "latest",
    "babel-preset-react": "latest",
    "babel-preset-flow": "latest",
    "babel-preset-stage-0": "latest"
  }
}
