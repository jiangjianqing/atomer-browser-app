{
  "name": "{{name}}",
  "version": "{{version}}",
  {{#if private}}
  "private" : true,
  {{/if}}
  "output": "./build",
  "scripts": {
    "lint": "run-s lint:*",
    "lint:js": "eslint \"{__tests__,test,src,pages/src,pages/lib}/**/*.js\"",
    "flow": "flow",
    "type-check": "flow check",

    "build:dist": "run-s type-check clean:dist compile ",
    {{#if lib}}
    "build" : "run-s build:lib",
    "build:lib": "run-s type-check clean:lib compile:lib test",
    "compile:lib": "babel src -d dist",
    "clean:lib": "rimraf lib",
    {{/if}}
    {{#if browserify}}
    "watch:bundle": "watchify src/main.js -o build/common-bundle.js --debug ",
    "serve": "echo 'http-server -o -s -c 1 -a localhost'",
    "dev": "npm-run-all --parallel watch:bundle serve",
    "bundle": "cross-env NODE_ENV=production browserify -g envify src/main.js | uglifyjs -c warnings=false -m > build/common-bundle.js",
    {{/if}}
    {{#if webpack2}}
    "dev": "npm run build && cross-env NODE_ENV=development webpack-dev-server --config ./webpack.config.js  --open",
    "dll": "cross-env NODE_ENV=production webpack --config ./webpack.dll.config.js  --progress --colors",
    "build-release": "cross-env NODE_ENV=production webpack --config ./webpack.config.js  --progress --hide-modules",
    "build": "cross-env webpack --config ./webpack.config.js  --progress --hide-modules",
    {{/if}}
    "prepublish": "npm run build",
    "predeploy": "npm run build",
    "deploy": "(test 1 -eq 1 || cd ./pages/out && git init && git config user.name \"Travis CI\" && git config user.email \"github@fb.com\" && git add . && git commit -m \"Deploy to GitHub Pages\" && git push --force --quiet \"https://${GH_TOKEN}@github.com/facebook/immutable-js.git\" master:gh-pages > /dev/null 2>1)",
    "test": "mocha",
    "test:travis": "npm run test && ./resources/check-changes.sh",
    "clean:build": "rimraf build",
    "clean:dist": "rimraf dist"
  },
  {{#if browserify}}
  "browserify-shim": {
    {{#if director}}
    "router": "global:Router",
    {{/if}}
    "jquery": "global:jQuery"
  },
  "aliasify": {
    "aliases": {
        {{#if vue}}
      "vue": "./node_modules/vue/dist/vue.common.js"
        {{/if}}
    },
    "verbose": false
  },
  "browserify": {
    "debug": true,
    "entries": [
      "./src/main.js"
    ],
    "transform": [
      "babelify",
    {{#if vue}}
      "vueify",
    {{/if}}
    {{#if react}}
      "reactify",
    {{/if}}
      "aliasify",
      "brfs",
      "browserify-shim"
    ]
  },
  {{/if}}
  "dependencies": {
    {{#if page}}
    "page": "latest",
    {{/if}}
    {{#if react}}
    "react": "latest",
    "react-dom": "latest",
    {{/if}}
    {{#if vue}}
    "vue": "latest",
    "vue-router": "latest",
    {{/if}}
    "q": "latest",
    "axios": "latest",
    "js-cookie": "latest",
    "handlebars": "latest"
  },
  "devDependencies": {
    {{#if browserify}}
    "npm-run-all": "latest",
    "envify": "latest",
    "aliasify": "latest",
    "babelify": "latest",
    "brfs": "latest",
    "browserify": "latest",
    "browserify-shim": "latest",
    {{#if react}}
    "reactify": "latest",
    {{/if}}
    {{#if vue}}
    "vueify": "latest",
    {{/if}}
    "gulp": "latest",
    "gulp-sourcemaps": "latest",
    "vinyl-buffer": "latest",
    "vinyl-source-stream": "latest",
    {{/if}}
    {{#if webpack2}}
    "webpack": "^2.x",
    "webpack-dev-server": "^2.x",
    "vue-loader": "latest",
    "transform-loader": "latest",
    "handlebars-loader": "latest",
    "html-webpack-plugin": "latest",
    "css-loader": "latest",
    "assets-webpack-plugin": "latest",
    "babel-loader": "latest",
    {{/if}}

    "eslint": "latest",
    "eslint-config-atomer": "latest",
    "eslint-plugin-flowtype": "latest",
    "eslint-plugin-react": "latest",

    "karma": "latest",
    "karma-browserify": "latest",
    "karma-chrome-launcher": "latest",
    "karma-firefox-launcher": "latest",
    "karma-mocha": "latest",
    "karma-mocha-reporter": "latest",
    "mocha": "latest",
    "chai": "latest",

    "vue-template-compiler": "latest",

    "flow-bin": "latest",
    "rimraf": "latest",

    "cross-env": "latest",
    "watchify": "latest",
    "babel-cli": "latest",
    "babel-core": "latest",
    "babel-eslint": "latest",
    "babel-plugin-transform-runtime": "latest",
    "babel-preset-es2015": "latest",
    "babel-preset-react": "latest",
    "babel-preset-flow": "latest",
    "babel-preset-stage-0": "latest"
  }
}
