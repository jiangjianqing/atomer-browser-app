{
  "name": "{{name}}",
  "version": "{{version}}",
  "private" : true,
  "output": "./build",
  "scripts": {
    {{#if webpack2}}
    "dev": "npm run build && cross-env NODE_ENV=development webpack-dev-server --config ./webpack.config.js  --open",
    "dll": "cross-env NODE_ENV=production webpack --config ./webpack.dll.config.js  --progress --colors",
    "build-release": "cross-env NODE_ENV=production webpack --config ./webpack.config.js  --progress --hide-modules",
    "build": "cross-env webpack --config ./webpack.config.js  --progress --hide-modules",
    {{/if}}
    "predeploy": "npm run build",
    "deploy": "echo deploy!!",
    "test": "mocha"
  },
  {{#if browserify}}
  "browserify-shim": {
    {{#if director}}
    "router": "global:Router",
    {{/if}}
    "jquery": "global:jQuery"
  },
  "aliasify": {
    "aliases": {
        {{#if vue}}
      "vue": "./node_modules/vue/dist/vue.common.js"
        {{/if}}
    },
    "verbose": false
  },
  "browserify": {
    "debug": true,
    "entries": [
      "./src/main.js"
    ],
    "transform": [
      "babelify",
    {{#if vue}}
      "vueify",
    {{/if}}
    {{#if react}}
      "reactify",
    {{/if}}
      "aliasify",
      "brfs",
      "browserify-shim"
    ]
  },
  {{/if}}
  "dependencies": {
    {{#if page}}
    "page": "latest",
    {{/if}}
    {{#if react}}
    "react": "latest",
    "react-dom": "latest",
    {{/if}}
    {{#if vue}}
    "vue": "latest",
    "vue-router": "latest",
    {{/if}}
    "q": "latest",
    "axios": "latest",
    "js-cookie": "latest",
    "handlebars": "latest"
  },
  "devDependencies": {
    {{#if browserify}}
    "aliasify": "latest",
    "babelify": "latest",
    "brfs": "latest",
    "browserify": "latest",
    "browserify-shim": "latest",
    {{#if react}}
    "reactify": "latest",
    {{/if}}
    {{#if vue}}
    "vueify": "latest",
    {{/if}}
    "gulp": "latest",
    "gulp-sourcemaps": "latest",
    "vinyl-buffer": "latest",
    "vinyl-source-stream": "latest",
    {{/if}}
    {{#if webpack2}}
    "webpack": "^2.x",
    "webpack-dev-server": "^2.x",
    "vue-loader": "latest",
    "transform-loader": "latest",
    "handlebars-loader": "latest",
    "html-webpack-plugin": "latest",
    "css-loader": "latest",
    "assets-webpack-plugin": "latest",
    "babel-loader": "latest",
    {{/if}}

    "eslint": "latest",
    "eslint-config-atomer": "latest",
    "eslint-plugin-flowtype": "latest",
    "eslint-plugin-react": "latest",

    "karma": "latest",
    "karma-browserify": "latest",
    "karma-chrome-launcher": "latest",
    "karma-firefox-launcher": "latest",
    "karma-mocha": "latest",
    "karma-mocha-reporter": "latest",
    "mocha": "latest",
    "chai": "latest",

    "vue-template-compiler": "latest",

    "cross-env": "latest",
    "watchify": "latest",
    "babel-cli": "latest",
    "babel-core": "latest",
    "babel-eslint": "latest",
    "babel-plugin-transform-runtime": "latest",
    "babel-preset-es2015": "latest",
    "babel-preset-react": "latest",
    "babel-preset-stage-0": "latest"
  }
}
